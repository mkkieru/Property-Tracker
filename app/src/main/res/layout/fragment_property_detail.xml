                <!--                    android:text="124 street. Karen, Oregon, 97222"-->
                <!--                    android:textColor="@color/black"-->
                <!--                    android:textSize="15sp"-->
                <!--                    android:textStyle="bold" />-->

            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</FrameLayout>